{
    "__inputs": [],
    "__requires": [
        {
            "type": "grafana",
            "id": "grafana",
            "name": "Grafana",
            "version": "10.0.0"
        },
        {
            "type": "panel",
            "id": "timeseries",
            "name": "Time series",
            "version": "10.0.0"
        },
        {
            "type": "datasource",
            "id": "prometheus",
            "name": "Prometheus",
            "version": "2.0.0"
        }
    ],
    "title": "NVIDIA DCGM - GPU Overview",
    "panels": [
        {
            "type": "timeseries",
            "title": "GPU Utilization %",
            "targets": [
                {
                    "expr": "avg by (gpu) (DCGM_FI_DEV_GPU_UTIL)"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Memory Used (MiB)",
            "targets": [
                {
                    "expr": "avg by (gpu) (DCGM_FI_DEV_FB_USED)"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Temperature (C)",
            "targets": [
                {
                    "expr": "avg by (gpu) (DCGM_FI_DEV_GPU_TEMP)"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Power Draw (W)",
            "targets": [
                {
                    "expr": "avg by (gpu) (DCGM_FI_DEV_POWER_USAGE)"
                }
            ]
        }
    ],
    "schemaVersion": 38,
    "version": 1
}